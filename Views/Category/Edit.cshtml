@model Category

@{
    ViewData["Title"] = "Edit";
}

<section class="createSection">
    <h1>Edit</h1>

    <h2>Category</h2>
    <hr />
    <div>
        <div>
            <form asp-action="Edit" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly"></div>
                <input type="hidden" asp-for="Id" />
                <div>
                    <p>Current Image</p>
                    <img src="@("~/Images/"+Model.ImageName)" alt="" asp-append-version="true" />
                </div>
                <div>
                    <div class="labelDiv">
                        <label asp-for="Title"></label>
                        <span asp-validation-for="Title"></span>
                    </div>
                    <input asp-for="Title" />
                </div>
                <div>
                    <div class="labelDiv">
                        <label asp-for="Color"></label>
                        <span asp-validation-for="Color"></span>
                    </div>
                    <input asp-for="Color" />
                </div>
                <div class="form-group">
                    <div class="labelDiv">
                        <label asp-for="ImageFile" class="control-label"></label>
                        <span asp-validation-for="ImageFile"></span>
                    </div>
                    <input class="background-light text-darkest" asp-for="ImageFile" accept="image/*" />
                </div>
                <div>
                    <div class="labelDiv">
                        <label asp-for="ImageTitle"></label>
                        <span asp-validation-for="ImageTitle"></span>
                    </div>
                    <input asp-for="ImageTitle" />
                </div>
                <div class="buttonVisualize">
                    <p>Current Visual:</p>
                    <button class="btn text-darkest" style="background-color:@Model.Color">@Html.DisplayFor(model => model.Title)</button>
                </div>
                <div class="submitDiv">
                    <input class="background-blue text-lightest" type="submit" value="Save" />
                </div>
            </form>
        </div>
    </div>
    <div class="backDiv">
        <a asp-action="Index">Back to List</a>
    </div>
</section>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
