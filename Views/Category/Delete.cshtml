@model Category

@{
    ViewData["Title"] = "Delete";
}


<div class="articleDetails">
    <article>
        <h1>Delete</h1>
        <h2>Are you sure you want to delete this?</h2>
        <picture>
            <img src="@("~/Images/"+Model.ImageName)" alt="" asp-append-version="true" />
        </picture>
        <h2>
            @Html.DisplayFor(model => model.Title)
        </h2>
        <p>
            <span>@Html.DisplayNameFor(model => model.Color): </span>@Html.DisplayFor(model => model.Color)
        </p>
        <p>
            <span>@Html.DisplayNameFor(model => model.ImageTitle): </span>@Html.DisplayFor(model => model.ImageTitle)
        </p>

        <p>
            <span>Visual Representation:</span>
            <button class="btn text-darkest" style="background-color:@Model.Color">@Html.DisplayFor(model => model.Title)</button>
        </p>
    </article>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" />
    </form>
    <div class="backDiv">
        <a asp-action="Index">Back to List</a>
    </div>
</div>
