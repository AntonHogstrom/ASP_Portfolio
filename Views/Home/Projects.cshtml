@model IEnumerable<MyPortfolio.Models.Project>

@{
    ViewData["Title"] = "Projects";
}

<div class="beforeArticles">
    <h1>Projects</h1>
</div>
<div class="articleContainer">
    @foreach (var item in Model)
    {
    <article>
        <picture>
            <img src="@("~/Images/" + item.ImageName)" title="@item.ImageTitle" alt="@item.ImageTitle" asp-append-version="true" />
        </picture>
        <h2>
            @Html.DisplayFor(modelItem => item.Name)
        </h2>
        <p>
            <span>@Html.DisplayNameFor(model => model.Created): </span>@Html.DisplayFor(modelItem => item.Created)
        </p>
        <p>
            <span>@Html.DisplayNameFor(model => model.Url): </span>@Html.DisplayFor(modelItem => item.Url)
        </p>
        @if (item.Category != null)
        {
            <button class="btn text-lightest" style="background-color:@item.Category.Color">@Html.DisplayFor(modelItem => item.Category.Title)</button>
        }
        <a href="Projects/Details/@item.Id">Read More</a>
    </article>
    }
</div>
